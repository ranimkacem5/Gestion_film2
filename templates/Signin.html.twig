{# register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --dark-bg: #0a0a0a;
            --darker-bg: #050505;
            --card-bg: #111111;
            --purple-primary: #9333ea;
            --purple-glow: #9333ea40;
            --purple-light: #a855f7;
            --purple-dark: #7e22ce;
            --text-white: #f8fafc;
            --text-gray: #94a3b8;
        }

        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at center, var(--dark-bg) 0%, var(--darker-bg) 100%);
            padding: 2rem;
        }

        .auth-card {
            background: rgba(17, 17, 17, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4),
                        0 0 30px rgba(147, 51, 234, 0.2);
            border: 1px solid rgba(147, 51, 234, 0.2);
        }

        .auth-title {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-align: center;
            background: linear-gradient(45deg, var(--purple-light), var(--purple-primary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 800;
            letter-spacing: -1px;
            text-shadow: 0 2px 10px rgba(147, 51, 234, 0.3);
        }

        .auth-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-group {
            position: relative;
        }

        .form-input {
            width: 100%;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(147, 51, 234, 0.2);
            border-radius: 8px;
            color: var(--text-white);
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--purple-primary);
            box-shadow: 0 0 15px rgba(147, 51, 234, 0.3);
        }

        .form-label {
            position: absolute;
            left: 1rem;
            top: 1rem;
            color: var(--text-gray);
            transition: all 0.3s ease;
            pointer-events: none;
        }

        .form-input:focus ~ .form-label,
        .form-input:not(:placeholder-shown) ~ .form-label {
            transform: translateY(-2.5rem) scale(0.9);
            color: var(--purple-light);
        }

        .auth-button {
            background: linear-gradient(45deg, var(--purple-dark), var(--purple-primary));
            color: var(--text-white);
            border: none;
            padding: 1rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 1rem;
        }

        .auth-button:hover {
            background: linear-gradient(45deg, var(--purple-primary), var(--purple-light));
            transform: translateY(-2px);
            box-shadow: 0 0 20px rgba(147, 51, 234, 0.4);
        }

        .auth-link {
            color: var(--purple-light);
            text-align: center;
            display: block;
            margin-top: 1.5rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .auth-link:hover {
            color: var(--purple-primary);
            text-shadow: 0 0 10px rgba(147, 51, 234, 0.5);
        }

        .error-message {
            background: rgba(220, 38, 38, 0.1);
            color: #ef4444;
            padding: 0.8rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            border: 1px solid rgba(220, 38, 38, 0.2);
        }

        @media (max-width: 480px) {
            .auth-card {
                padding: 2rem;
            }

            .auth-title {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}
{% block body %}
    <div class="auth-container">
        <div class="auth-card">
            <h1 class="auth-title">Inscription</h1>
            <form action="{{ path('app_register') }}" method="POST" class="auth-form">
                <div class="form-group">
                    <input type="text" name="name" id="name" class="form-input" placeholder=" " required>
                    <label for="name" class="form-label">Nom</label>
                </div>
                <div class="form-group">
                    <input type="email" name="email" id="email" class="form-input" placeholder=" " required>
                    <label for="email" class="form-label">Email</label>
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" class="form-input" placeholder=" " required>
                    <label for="password" class="form-label">Mot de passe</label>
                </div>
                <button type="submit" class="auth-button">S'inscrire</button>
            </form>
            <a href="{{ path('app_login') }}" class="auth-link">Déjà un compte ? Se connecter</a>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Catalogue des Films{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }
        .movies-container {
            padding: 2rem;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            margin: 2rem auto;
            max-width: 1400px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
        }
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
        .btn-add-movie {
            background-color: #4CAF50;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
        .btn-add-movie:hover {
            background-color: #45a049;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
        .movie-table {
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
            background-color: white;
        }
        .movie-table thead {
            background: linear-gradient(90deg, #2c3e50, #3498db);
            color: white;
        }
        .movie-table th {
            padding: 1rem;
            font-weight: 500;
        }
        .movie-table td {
            padding: 0.75rem 1rem;
            vertical-align: middle;
        }
        .movie-table tbody tr {
            transition: all 0.3s ease;
        }
        .movie-table tbody tr:hover {
            background-color: #f8f9fa;
            transform: scale(1.005);
        }
        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }
        .btn-show {
            background-color: #3498db;
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 4px;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .btn-edit {
            background-color: #f39c12;
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 4px;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .btn-show:hover, .btn-edit:hover {
            opacity: 0.9;
            color: white;
            transform: translateY(-2px);
        }
        .empty-message {
            text-align: center;
            padding: 2rem;
            color: #7f8c8d;
            font-style: italic;
        }
        .description-cell {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .display-4 {
            color: #2c3e50;
            font-weight: 600;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="movies-container">
        <div class="page-header">
            <h1 class="display-4">Catalogue des Films</h1>
            <a href="{{ path('app_movie_new') }}" class="btn-add-movie">
                <i class="fas fa-plus-circle"></i> Ajouter un film
            </a>
        </div>

        <div class="movie-table">
            <table class="table table-borderless mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Année</th>
                        <th>Durée</th>
                        <th>Note</th>
                        <th>Réalisateur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for movie in movies %}
                    <tr>
                        <td>{{ movie.id }}</td>
                        <td><strong>{{ movie.title }}</strong></td>
                        <td class="description-cell" title="{{ movie.descrition }}">
                            {{ movie.descrition }}
                        </td>
                        <td>{{ movie.releaseyear }}</td>
                        <td>{{ movie.duration }} heure</td>
                        <td>
                            {% if movie.rating %}
                                <span class="text-warning">
                                    {% for i in 1..5 %}
                                        {% if i <= movie.rating %}
                                            ★
                                        {% else %}
                                            ☆
                                        {% endif %}
                                    {% endfor %}
                                </span>
                            {% else %}
                                Non noté
                            {% endif %}
                        </td>
                        <td>{{ movie.director }}</td>
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('app_movie_show', {'id': movie.id}) }}" class="btn-show">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_movie_edit', {'id': movie.id}) }}" class="btn-edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="empty-message">
                            Aucun film n'a été trouvé dans la base de données
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
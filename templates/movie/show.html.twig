{% extends 'base.html.twig' %}

{% block title %}{{ movie.title }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .movie-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .movie-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #eee;
    }

    .movie-title {
        font-size: 2.5rem;
        color: #2d3748;
        margin: 0;
    }

    .movie-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-size: 0.875rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
    }

    .info-value {
        font-size: 1.125rem;
        color: #2d3748;
    }

    .movie-description {
        margin: 2rem 0;
        line-height: 1.6;
    }

    .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-primary {
        background: #4a5568;
        color: white;
    }

    .btn-secondary {
        background: #e2e8f0;
        color: #2d3748;
    }

    .btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }
</style>
{% endblock %}

{% block body %}
<div class="movie-container">
    <div class="movie-header">
        <h1 class="movie-title">{{ movie.title }}</h1>
    </div>

    <div class="movie-info">
        <div class="info-item">
            <span class="info-label">Année de sortie</span>
            <span class="info-value">{{ movie.releaseyear }}</span>
        </div>
        <div class="info-item">
            <span class="info-label">Durée</span>
            <span class="info-value">{{ movie.duration }} min</span>
        </div>
        <div class="info-item">
            <span class="info-label">Note</span>
            <span class="info-value">{{ movie.rating }}/10</span>
        </div>
        <div class="info-item">
            <span class="info-label">Réalisateur</span>
            <span class="info-value">{{ movie.director }}</span>
        </div>
    </div>

    <div class="movie-description">
        <p>{{ movie.descrition }}</p>
    </div>

    <div class="actions">
        <a href="{{ path('app_movie_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_movie_edit', {'id': movie.id}) }}" class="btn btn-primary">Modifier</a>
        {{ include('movie/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
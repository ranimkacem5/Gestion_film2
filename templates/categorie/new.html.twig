{% extends 'base.html.twig' %}

{% block title %}Ajouter une nouvelle catégorie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }
        .new-category-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
            backdrop-filter: blur(10px);
        }
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e9ecef;
        }
        .page-title {
            color: #2c3e50;
            font-size: 2.5rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="new-category-container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-plus-circle"></i> Ajouter une nouvelle catégorie
            </h1>
        </div>

        {{ include('categorie/_form.html.twig') }}

        <div class="button-group">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
